@model SportsStore.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Your Cart:</b>
        @Model.Lines.Sum(l => l.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </span>

    @Html.ActionLink("Checkout", "Index", "Cart",
        new { returnUrl = Request.Url.PathAndQuery }, null )
</div>